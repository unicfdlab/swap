FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      sampleDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

interpolationScheme cell;

setFormat       raw; //csv, ...

sets
(
    line
    {
        type    uniform;
        axis    y;
        start   ( 0 0 0 );
        end     ( 0 0.045 0 );
        nPoints 100;
    }
);

fields          ( alpha );


